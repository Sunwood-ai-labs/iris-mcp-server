{
  "name": "@sunwood-ai-labs/iris-mcp-server",
  "version": "0.1.0",
  "description": "リリースノート生成のためのMCPサーバー",
  "private": false,
  "type": "module",
  "bin": {
    "iris-mcp-server": "./build/index.js"
  },
  "files": [
    "build",
    "assets"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
